<!DOCTYPE html>
<html>
    <head>
    <title>Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/cart.css">
    </head>
        <body>
            <%- include('partials/navbar') %>
            <div class="container mt-5">
                
                

                <h2>Checkout Summary</h2>

                <table class="table table-bordered text-center mt-4">
                    <thead class="table-dark">
                        <tr>
                        <th>Product</th>
                        <th>Image</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% cart.forEach(item => { %>
                        <tr>
                            <td><%= item.productName %></td>
                            <td><img src="/images/<%= item.image %>" width="80"></td>
                            <td><%= item.quantity %></td>
                            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>

                <h3>Total Amount: $<%= totalAmount.toFixed(2) %></h3>

                    <form action="/order/create" method="POST">
                        <input type="hidden" name="selectedProducts" value="<%= JSON.stringify(cart.map(i => i.product_id)) %>">

                        <button class="btn btn-success mt-3 px-4 py-2">Confirm Order</button>
                    </form>

                <a href="/cart" class="btn btn-secondary mt-3">Back to Cart</a>

            </div>        
    <%- include('partials/footer') %>
        </body>
</html>
