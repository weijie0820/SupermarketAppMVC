<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/product.css">
    <title>Supermarket App</title>
</head>
<body>
    <%- include('partials/navbar') %>


    <div class="container">
        <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
        <br>
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        <% if (product) { %> <!-- Check if product data exists -->
            <div>
                <p><b>Product Name:</b><br> <%= product.productName %></p>
                <p><b>Product Image:</b><br> <img src = "../images/<%= product.image %>" width="20%"></p>
                <p><b>Product Quantity:</b><br> <%= product.quantity %></p>
                <p><b>Price:</b><br> $<%= product.price.toFixed(2) %></p> 
            </div>
        <% } else { %>
            <p>No product found.</p>
        <% } %>
        <% if (user.role === "admin") { %>
          <a href ="/inventory">Back</a>
        <% } else { %>
          <a href ="/shopping">Back</a>
        <% } %>
    </div>
    
</body>
</html>
