<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Email Verification</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/otp.css">
</head>
<body>
  <div class="otp-container">
    <h1 class="otp-title">Email Verification</h1>

    <% if (query && query.error) { %>
      <div class="alert alert-danger"><%= query.error %></div>
    <% } else if (query && query.sent) { %>
      <div class="alert alert-success">
        OTP sent to <strong><%= query.email %></strong>. Check your inbox.<br>
        <small class="text-danger">âš  Your OTP is only valid for 1 minute.</small>
      </div>

    <% } %>

    <div class="row">
      <div class="col-md-6">
        <form action="/reqOTP" method="post">
          <div class="mb-3">
            <label for="emailField" class="form-label">Enter email to request OTP</label>
            <input type="email" id="emailField" name="email" class="form-control" required value="<%= query.email || '' %>">
          </div>
          <button class="btn btn-secondary">Request OTP</button>
        </form>
      </div>

      <div class="col-md-6">
        <form action="/verifyOTP" method="post">
          <input type="hidden" name="email" id="verifyEmail" value="<%= query.email || '' %>">
          <div class="mb-3">
            <label for="otpField" class="form-label">Enter OTP</label>
            <input type="text" id="otpField" name="otp" class="form-control" required>
          </div>
          <button class="btn btn-primary">Verify OTP</button>
        </form>
      </div>
    </div>
  </div>

 <script>
  // keep email in verify form synced
  document.getElementById('emailField')?.addEventListener('input', function(e){
    document.getElementById('verifyEmail').value = e.target.value;
  });

  // Countdown Timer (60 seconds)
  const otpSent = "<%= query && query.sent ? 'true' : 'false' %>";
  const countdownContainer = document.createElement('p');
  const verifyBtn = document.querySelector('button.btn.btn-primary');

  if (otpSent) {
      let timeLeft = 60; // 60 seconds
      countdownContainer.style.fontWeight = 'bold';
      countdownContainer.style.marginTop = '10px';
      countdownContainer.classList.add("text-danger");

      // Insert countdown message below the OTP success alert
      const alertBox = document.querySelector(".alert-success");
      alertBox.after(countdownContainer);

      const interval = setInterval(() => {
          let minutes = Math.floor(timeLeft / 60);
          let seconds = timeLeft % 60;

          countdownContainer.textContent = `OTP expires in ${minutes}:${seconds.toString().padStart(2, "0")}`;

          if (timeLeft <= 0) {
              clearInterval(interval);
              countdownContainer.textContent = "OTP has expired. Please request a new one.";
              countdownContainer.classList.replace("text-danger", "text-warning");

              // Disable Verify button
              verifyBtn.disabled = true;
              verifyBtn.textContent = "OTP Expired";
          }

          timeLeft--;
      }, 1000);
  }
</script>

</body>
</html>
