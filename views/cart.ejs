<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Your Cart</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/cart.css">
        <link rel="stylesheet" href="/css/layout.css">
    </head>

        <body>

        <%- include('partials/navbar') %>

        <!-- FIXED: wrap all content inside page-wrapper -->
        <main class="page-wrapper">

            <div class="container mt-4">
            <h2>Your Cart</h2>

            <% if (cart.length === 0) { %>

                <p class="empty-text">Your cart is empty.</p>

            <% } else { %>

            <!--  THIS IS THE ONLY FORM YOU NEED  -->
            <form id="checkoutForm" action="/checkout" method="POST">

                <table class="table table-bordered text-center cart-table">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="selectAll"></th>
                            <th>Product</th>
                            <th>Image</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% cart.forEach(item => { %>
                        <tr>
                            <td>
                                <input type="checkbox" class="selectItem" value="<%= item.product_id %>">
                            </td>

                            <td><%= item.productName %></td>

                            <td>
                                <img src="/images/<%= item.image %>" class="cart-img">
                            </td>

                            <td class="d-flex justify-content-center gap-2 align-items-center qty-box">

                                <button formaction="/cart/decrease/<%= item.product_id %>" 
                                        formmethod="POST"
                                        class="btn btn-outline-danger btn-sm">-</button>

                                <input type="number" 
                                    name="quantities[<%= item.product_id %>]" 
                                    value="<%= item.quantity %>" 
                                    min="1"
                                    max="<%= item.stock %>"
                                    class="form-control text-center qty-input">

                                <button formaction="/cart/increase/<%= item.product_id %>" 
                                        formmethod="POST"
                                        class="btn btn-outline-success btn-sm">+</button>

                                <button formaction="/cart/update/<%= item.product_id %>" 
                                        formmethod="POST"
                                        class="btn btn-primary btn-sm">Update</button>

                            </td>

                            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>

                            <td>
                                <button formaction="/cart/remove/<%= item.product_id %>" 
                                        formmethod="POST"
                                        class="btn btn-danger remove-btn">Remove</button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>

                <!--  Selected products JSON will be stored here -->
                <input type="hidden" id="selectedProductsInput" name="selectedProducts">

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <h4 class="fw-bold total-text">
                        Total: $<%= cart.reduce((sum, item) => sum + item.price * item.quantity, 0).toFixed(2) %>
                    </h4>

                    <div>
                        <button formaction="/cart/clear" 
                                formmethod="POST" 
                                class="btn btn-secondary me-3 clear-btn">
                            Clear Cart
                        </button>

                        <!--  real checkout button  -->
                        <button class="btn btn-success checkout-btn">
                            Checkout →
                        </button>
                    </div>
                </div>

            </form>

            <% } %>

            <script>
            document.getElementById("selectAll").addEventListener("change", function () {
                document.querySelectorAll(".selectItem").forEach(cb => {
                    cb.checked = this.checked;
                });
            });

            // ⭐ Convert selected checkboxes into JSON before submitting
            document.getElementById("checkoutForm").addEventListener("submit", function () {
                const selected = [...document.querySelectorAll(".selectItem:checked")].map(cb => cb.value);
                document.getElementById("selectedProductsInput").value = JSON.stringify(selected);
            });
            </script>
        </body>
</html>
