<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Supermarket App</a>

    <div class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
        <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>


<div class="container mt-4">
  <h2>Your Cart</h2>

  <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
  <% } else { %>

  <table class="table table-bordered text-center">
    <thead class="table-dark">
      <tr>
        <th>Product</th>
        <th>Image</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% let total = 0; %>

      <% cart.forEach(item => { %>
        <tr>
          <td><%= item.productName %></td>
          <td><img src="/images/<%= item.image %>" width="80"></td>

          <td>
            <!-- decrease -->
            <form action="/cart/decrease/<%= item.id %>" method="POST" style="display:inline;">
              <button class="btn btn-sm btn-outline-danger">-</button>
            </form>

            <span class="px-2"><%= item.quantity %></span>

            <!-- increase -->
            <form action="/cart/increase/<%= item.id %>" method="POST" style="display:inline;">
              <button class="btn btn-sm btn-outline-success">+</button>
            </form>
          </td>

          <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
        </tr>

        <% total += item.price * item.quantity; %>
      <% }); %>
    </tbody>
  </table>

      <h4>Total: $<%= total.toFixed(2) %></h4>

      <a href="/shopping" class="btn btn-secondary mt-3">Back to Shopping</a>

      <% } %>
</div>

</body>
</html>
