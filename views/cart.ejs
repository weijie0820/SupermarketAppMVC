<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Supermarket App</a>

    <div class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
        <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>


<div class="container mt-4">
  <h2>Your Cart</h2>

  <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
  <% } else { %>

  <table class="table table-bordered text-center">
    <thead class="table-dark">
      <tr>
        <th>Product</th>
        <th>Image</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
        <% let total = 0; %>
        <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
                <td><%= cart[i].productName %></td>

                <td><img src="/images/<%= cart[i].image %>" width="80"></td>

                <td>
                    <!-- Decrease Qty -->
                    <form action="/cart/decrease/<%= cart[i].product_id %>" method="POST">
                        <button class="btn btn-sm btn-outline-danger">-</button>
                    </form>

                    <span class="px-2"><%= cart[i].quantity %></span>

                    <!-- Increase Qty -->
                    <form action="/cart/increase/<%= cart[i].product_id %>" method="POST">
                        <button class="btn btn-sm btn-outline-success">+</button>
                    </form>
                </td>

                <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>

                <td>
                    <!-- Remove -->
                    <form action="/cart/remove/<%= cart[i].product_id %>" method="POST">
                        <button class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>

              <% total += cart[i].price * cart[i].quantity; %>
          <% } %>
      </tbody>


  </table>

      <h4>Total: $<%= total.toFixed(2) %></h4>

      <a href="/shopping" class="btn btn-secondary mt-3">Back to Shopping</a>

      <% } %>
</div>

</body>
</html>
