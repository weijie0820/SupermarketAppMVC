<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Register - Supermarket App</title>
    <link rel="stylesheet" href="/css/login_register.css">
  </head>
    <body>
      <%- include('partials/navbar') %>

      <div class="auth-wrapper">
        <div class="auth-card">

          <h1 class="auth-title">Register</h1>

          <% if (messages && messages.length > 0) { %>
            <div class="alert alert-danger auth-alert">
              <% messages.forEach(message => { %>
                <p><%= message %></p>
              <% }) %>
            </div>
          <% } %>

          <form id="registerForm" action="/register" method="POST" class="auth-form">

            <div class="mb-3">
              <label>Username</label>
              <input name="username" class="form-control auth-input"
                    required value="<%= formData?.username || '' %>">
            </div>

            <div class="mb-3">
              <label>Email</label>
              <input type="email" name="email" class="form-control auth-input"
                    required value="<%= formData?.email || '' %>">
            </div>

            <div class="mb-3">
              <label>Password</label>
              <input type="password" name="password" class="form-control auth-input" required>
            </div>

            <div class="mb-3">
              <label>Address</label>
              <input name="address" class="form-control auth-input"
                    required value="<%= formData?.address || '' %>">
            </div>

            <div class="mb-3">
              <label>Contact</label>
              <input name="contact" class="form-control auth-input"
                    required value="<%= formData?.contact || '' %>">
            </div>

            <button type="submit" class="auth-btn">Register</button>

            <p class="auth-switch">
              Already have an account? <a href="/login">Login here</a>
            </p>

          </form>

        </div>
      </div>
    </body>


</html>
