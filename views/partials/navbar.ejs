<nav class="navbar navbar-expand-lg supermarket-navbar px-4">
  <div class="w-100 d-flex justify-content-between align-items-center">

    <!-- Branding -->
    <% if (user && user.role === "admin") { %>
      <a class="navbar-brand fw-bold supermarket-logo" href="/inventory">Supermarket Admin</a>
    <% } else { %>
      <a class="navbar-brand fw-bold supermarket-logo" href="/">Supermarket App</a>
    <% } %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav ms-auto">

        <% if (!user) { %>
          <!-- GUEST NAV -->
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/shopping">Products</a></li>
          <li class="nav-item"><a class="nav-link" href="/aboutus">About Us</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact Us</a></li>


          <li class="nav-item">
            <a class="btn btn-success ms-2 px-3" href="/register">Sign Up</a>
          </li>

          <li class="nav-item">
            <a class="btn btn-outline-dark ms-2 px-3" href="/login">Login</a>
          </li>

        <% } else if (user.role === "admin") { %>
          <!-- ADMIN NAV -->
          <li class="nav-item"><a class="nav-link" href="/inventory">Inventory</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/users">Manage Users</a></li>
          <li class="nav-item"><a class="nav-link" href="/addProduct">Add Product</a></li>
          

          <li class="nav-item">
            <a class="btn btn-danger ms-2 px-3" href="/logout">Logout</a>
          </li>

        <% } else { %>
            <!-- USER NAV -->
            <li class="nav-item"><a class="nav-link" href="/shopping">Products</a></li>
            <li class="nav-item"><a class="nav-link" href="/orders/history">Orders</a></li>
            <li class="nav-item"><a class="nav-link" href="/reviews">Reviews</a></li>
            <li class="nav-item"><a class="nav-link" href="/aboutus">About Us</a></li>
            <li class="nav-item"><a class="nav-link" href="/contact">Contact Us</a></li>
            <li class="nav-item">
                <a class="nav-link" href="/cart">   
                    <i class="ri-shopping-cart-2-fill" style="font-size: 22px;"></i>
                </a>
            </li>


            <li class="nav-item">
                <a class="btn btn-danger ms-2 px-3" href="/logout">Logout</a>
            </li>
        <% } %>


      </ul>
    </div>

  </div>
</nav>
